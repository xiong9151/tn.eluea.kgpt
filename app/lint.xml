<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!-- Suppress InflateParams warnings - null parent is intentional for bottom sheets and dialogs -->
    <issue id="InflateParams" severity="ignore" />
    
    <!-- Suppress InternalInsetResource warnings - using system resources for navigation bar height -->
    <issue id="InternalInsetResource" severity="ignore" />
    
    <!-- Suppress DiscouragedApi warnings - using getIdentifier for system resources -->
    <issue id="DiscouragedApi" severity="ignore" />
    
    <!-- Suppress NotifyDataSetChanged warnings - acceptable for simple use cases -->
    <issue id="NotifyDataSetChanged" severity="ignore" />
    
    <!-- Suppress DrawAllocation warnings - performance is acceptable for color picker views -->
    <issue id="DrawAllocation" severity="ignore" />
    
    <!-- Suppress WorldReadableFiles warnings - required for XSharedPreferences -->
    <issue id="WorldReadableFiles" severity="ignore" />
    
    <!-- Suppress SetWorldReadable warnings - required for XSharedPreferences -->
    <issue id="SetWorldReadable" severity="ignore" />
    
    <!-- Suppress AndroidGradlePluginVersion - we control our Gradle version -->
    <issue id="AndroidGradlePluginVersion" severity="ignore" />
    
    <!-- Suppress layout optimization warnings - design choices -->
    <issue id="UseCompoundDrawables" severity="ignore" />
    <issue id="DisableBaselineAlignment" severity="ignore" />
    <issue id="InefficientWeight" severity="ignore" />
    <issue id="MergeRootFrame" severity="ignore" />
    <issue id="UselessParent" severity="ignore" />
    <issue id="TooManyViews" severity="ignore" />
    <issue id="NestedWeights" severity="ignore" />
    
    <!-- Suppress vector path warnings - paths are generated/necessary -->
    <issue id="VectorPath" severity="ignore" />
    
    <!-- Suppress overdraw warnings - design choices -->
    <issue id="Overdraw" severity="ignore" />
    
    <!-- Suppress exported component warnings - required for Xposed module communication -->
    <issue id="ExportedContentProvider" severity="ignore" />
    <issue id="ExportedReceiver" severity="ignore" />
    <issue id="ExportedService" severity="ignore" />
    
    <!-- Suppress StaticFieldLeak - managed singletons with application context -->
    <issue id="StaticFieldLeak" severity="ignore" />
    
    <!-- Suppress unused resources - many resources are used dynamically or kept for future use -->
    <issue id="UnusedResources" severity="ignore" />
    
    <!-- Suppress typography warnings - intentional text choices -->
    <issue id="TypographyDashes" severity="ignore" />
    <issue id="TypographyEllipsis" severity="ignore" />
    <issue id="TypographyQuotes" severity="ignore" />
    <issue id="TypographyFractions" severity="ignore" />
    <issue id="TypographyOther" severity="ignore" />
    
    <!-- Suppress icon shape warnings - custom app icon design -->
    <issue id="IconLauncherShape" severity="ignore" />
    <issue id="IconColors" severity="ignore" />
    <issue id="IconDensities" severity="ignore" />
    <issue id="IconDipSize" severity="ignore" />
