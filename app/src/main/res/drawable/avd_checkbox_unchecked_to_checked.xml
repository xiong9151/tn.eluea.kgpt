<?xml version="1.0" encoding="utf-8"?>
<animated-vector xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    
    <aapt:attr name="android:drawable">
        <vector
            android:width="24dp"
            android:height="24dp"
            android:viewportWidth="24"
            android:viewportHeight="24">
            
            <!-- Circle that scales up -->
            <group
                android:name="circle_group"
                android:pivotX="12"
                android:pivotY="12"
                android:scaleX="0"
                android:scaleY="0">
                <path
                    android:name="circle"
                    android:fillColor="#6750A4"
                    android:pathData="M12,12m-11,0a11,11 0,1 1,22 0a11,11 0,1 1,-22 0" />
            </group>
            
            <!-- Check mark that draws -->
            <group
                android:name="check_group"
                android:pivotX="12"
                android:pivotY="12">
                <path
                    android:name="check"
                    android:pathData="M9.55,15.15L18.025,6.675C18.225,6.475 18.4625,6.375 18.7375,6.375C19.0125,6.375 19.25,6.475 19.45,6.675C19.65,6.875 19.75,7.1167 19.75,7.4C19.75,7.6833 19.65,7.925 19.45,8.125L10.25,17.325C10.05,17.525 9.8167,17.625 9.55,17.625C9.2833,17.625 9.05,17.525 8.85,17.325L4.55,13.025C4.35,12.825 4.2542,12.5833 4.2625,12.3C4.2708,12.0167 4.375,11.775 4.575,11.575C4.775,11.375 5.0167,11.275 5.3,11.275C5.5833,11.275 5.825,11.375 6.025,11.575L9.55,15.15Z"
                    android:fillColor="#FFFFFF"
                    android:fillAlpha="0" />
            </group>
            
            <!-- Outline circle -->
            <path
                android:name="outline"
                android:strokeColor="#79747E"
                android:strokeWidth="2"
                android:pathData="M12,12m-11,0a11,11 0,1 1,22 0a11,11 0,1 1,-22 0" />
        </vector>
    </aapt:attr>
    
    <!-- Scale up circle -->
    <target android:name="circle_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:duration="200"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:interpolator="@android:interpolator/overshoot" />
                <objectAnimator
                    android:propertyName="scaleY"
                    android:duration="200"
                    android:valueFrom="0"
                    android:valueTo="1"
                    android:interpolator="@android:interpolator/overshoot" />
            </set>
        </aapt:attr>
    </target>
    
    <!-- Fade in check mark -->
    <target android:name="check">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="fillAlpha"
                android:duration="150"
                android:startOffset="100"
                android:valueFrom="0"
                android:valueTo="1"
                android:interpolator="@android:interpolator/fast_out_slow_in" />
        </aapt:attr>
    </target>
    
    <!-- Fade out outline -->
    <target android:name="outline">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="strokeAlpha"
                android:duration="100"
                android:valueFrom="1"
                android:valueTo="0"
                android:interpolator="@android:interpolator/fast_out_slow_in" />
        </aapt:attr>
    </target>
    
</animated-vector>
