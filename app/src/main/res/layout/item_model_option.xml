<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list_item_ripple"
    android:clickable="true"
    android:focusable="true"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingVertical="14dp"
    android:paddingHorizontal="8dp">

    <FrameLayout
        android:id="@+id/icon_container"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:background="@drawable/bg_option_icon">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_model_default" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_model_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:text="Model Name"
        android:textColor="?attr/colorOnSurface"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/cb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:button="@drawable/animated_checkbox_circle"
        android:background="@null" />

</LinearLayout>
