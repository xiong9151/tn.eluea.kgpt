<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Dim background -->
    <View
        android:id="@+id/dim_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Bottom Sheet Container -->
    <LinearLayout
        android:id="@+id/bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/bg_bottom_sheet"
        android:backgroundTint="?attr/colorSurfaceContainer"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:focusable="true">

        <!-- Drag Handle Area -->
        <LinearLayout
            android:id="@+id/drag_handle_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Handle Bar -->
            <View
                android:id="@+id/handle_bar"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/bg_sheet_handle" />

            <!-- Top spacer for fullscreen mode -->
            <View
                android:id="@+id/fullscreen_top_spacer"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:visibility="gone" />

            <!-- URL Bar with integrated buttons -->
            <LinearLayout
                android:id="@+id/url_display_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_input_field"
                android:backgroundTint="?attr/colorSurfaceContainerHigh"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingVertical="6dp"
                android:clickable="true"
                android:focusable="true">

                <!-- URL indicator dot -->
                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/bg_url_indicator" />

                <!-- URL Text -->
                <TextView
                    android:id="@+id/tv_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="13sp" />

                <!-- Open in browser button -->
                <ImageView
                    android:id="@+id/btn_open_browser"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp"
                    android:src="@drawable/ic_open_in_new_filled"
                    android:contentDescription="Open in browser"
                    app:tint="?attr/colorOnSurfaceVariant" />

                <!-- Close button -->
                <ImageView
                    android:id="@+id/btn_close"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/ic_close_circle_filled"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <!-- URL Edit Container (hidden by default) -->
            <LinearLayout
                android:id="@+id/url_edit_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_input_field_focused"
                android:backgroundTint="?attr/colorSurfaceContainerHighest"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp"
                android:paddingEnd="4dp"
                android:paddingVertical="4dp"
                android:visibility="gone">

                <EditText
                    android:id="@+id/et_url"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="Enter URL"
                    android:imeOptions="actionGo"
                    android:inputType="textUri"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"
                    android:textSize="14sp" />

                <!-- Go button -->
                <ImageView
                    android:id="@+id/btn_go_url"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/ic_arrow_circle_right_filled"
                    app:tint="?attr/colorPrimary" />

                <!-- Cancel button -->
                <ImageView
                    android:id="@+id/btn_cancel_edit"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="6dp"
                    android:src="@drawable/ic_close_circle_filled"
                    app:tint="?attr/colorOnSurfaceVariant" />
            </LinearLayout>
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:indeterminate="true"
            android:visibility="visible" />

        <!-- WebView Container -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="?attr/colorSurface">

            <WebView
                android:id="@+id/web_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layerType="hardware" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>
