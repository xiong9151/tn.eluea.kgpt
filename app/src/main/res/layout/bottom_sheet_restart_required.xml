<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_floating"
    android:backgroundTint="?attr/colorSurfaceContainer"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingHorizontal="24dp"
    android:paddingTop="16dp"
    android:paddingBottom="24dp">

    <!-- Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/bg_sheet_handle" />

    <!-- Icon with Glow Background -->
    <FrameLayout
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/bg_icon_glow_error"
        android:backgroundTint="@color/errorContainer">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_info_circle_filled"
            app:tint="@color/onErrorContainer" />
    </FrameLayout>

    <!-- Title -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Restart Required"
        android:textColor="?attr/colorOnSurface"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Description -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="center"
        android:text="To apply AI Text Actions changes, the app needs to restart."
        android:textColor="?attr/colorOnSurfaceVariant"
        android:textSize="15sp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <!-- Custom Restart Button with Tag -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/btn_restart_container"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:clickable="true"
            android:focusable="true"
            app:cardBackgroundColor="?attr/colorError"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            app:rippleColor="#33FFFFFF">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Restart Now"
                    android:textColor="?attr/colorOnError"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <!-- Countdown Tag -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="?attr/colorOnError"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/tv_countdown_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:layout_marginVertical="2dp"
                        android:text="6s"
                        android:textColor="?attr/colorError"
                        android:textSize="13sp"
                        android:textStyle="bold" />
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Cancel Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="@android:string/cancel"
            android:textAllCaps="false"
            android:textColor="?attr/colorOnSurface"
            android:textSize="16sp"
            app:backgroundTint="?attr/colorSurfaceContainerHigh"
            app:cornerRadius="14dp" />
    </LinearLayout>

</LinearLayout>
