<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Light -->
    <style name="Theme.KGPT" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryContainer">@color/accent_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorSurfaceVariant">@color/chip_bg_default</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        
        <!-- Surface Containers (Material 3) -->
        <item name="colorSurfaceContainerLowest">@color/surface_light</item>
        <item name="colorSurfaceContainerLow">@color/surface_light</item>
        <item name="colorSurfaceContainer">@color/container_background</item>
        <item name="colorSurfaceContainerHigh">@color/container_background</item>
        <item name="colorSurfaceContainerHighest">@color/surface_variant</item>
        
        <!-- Ripple & Highlight -->
        <item name="colorControlHighlight">@color/ripple_dynamic_selection</item>


        <!-- Switch colors -->
        <item name="colorPrimaryInverse">?attr/colorPrimary</item>

        <!-- Typography Scale (MD3) -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.KGPT.DisplayLarge</item>
        <item name="textAppearanceDisplayMedium">@style/TextAppearance.KGPT.DisplayMedium</item>
        <item name="textAppearanceDisplaySmall">@style/TextAppearance.KGPT.DisplaySmall</item>
        <item name="textAppearanceHeadlineLarge">@style/TextAppearance.KGPT.HeadlineLarge</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.KGPT.HeadlineMedium</item>
        <item name="textAppearanceHeadlineSmall">@style/TextAppearance.KGPT.HeadlineSmall</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.KGPT.TitleLarge</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.KGPT.TitleMedium</item>
        <item name="textAppearanceTitleSmall">@style/TextAppearance.KGPT.TitleSmall</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.KGPT.BodyLarge</item>
        <item name="textAppearanceBodyMedium">@style/TextAppearance.KGPT.BodyMedium</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.KGPT.BodySmall</item>
        <item name="textAppearanceLabelLarge">@style/TextAppearance.KGPT.LabelLarge</item>
        <item name="textAppearanceLabelMedium">@style/TextAppearance.KGPT.LabelMedium</item>
        <item name="textAppearanceLabelSmall">@style/TextAppearance.KGPT.LabelSmall</item>
    </style>



    <!-- AMOLED Overlay (Forces Black Backgrounds on top of Dynamic Colors) -->
    <style name="ThemeOverlay.KGPT.AMOLED" parent="">
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorSurfaceContainerLowest">@android:color/black</item>
        <item name="colorSurfaceContainerLow">@android:color/black</item>
        <item name="colorSurfaceContainer">@android:color/black</item>
        <item name="colorSurfaceContainerHigh">@color/surface_dark_amoled</item>
        <item name="colorSurfaceContainerHighest">@color/surface_dark_amoled</item>
        <!-- Force dividers to be colorful in AMOLED (using Secondary Container color) -->
        <item name="colorOutlineVariant">@color/divider_dark</item>
        <item name="colorOutline">@color/divider_dark</item>
    </style>

    <style name="Theme.KGPT.AMOLED" parent="Theme.KGPT">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <!-- In AMOLED Base Theme, we also default to black, though DynamicColors might overwrite without the Overlay -->
        <item name="android:colorBackground">@android:color/black</item>
        <item name="colorSurface">@android:color/black</item>
        <item name="colorSurfaceContainer">@android:color/black</item>
    </style>

    <style name="NoAnimation">
        <item name="android:windowEnterAnimation">@anim/animation_none</item>
        <item name="android:windowExitAnimation">@anim/animation_none</item>
    </style>

    <!-- Card Style -->
    <style name="CardStyle" parent="">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_light</item>
    </style>

    <!-- Button Style -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Text Styles -->
    <style name="TextHeadline" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextTitle" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">@color/text_primary_light</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextBody" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <style name="TextCaption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_secondary_light</item>
    </style>

    <!-- MD3 Typography Definitions -->
    <style name="TextAppearance.KGPT.DisplayLarge" parent="TextAppearance.Material3.DisplayLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.DisplayMedium" parent="TextAppearance.Material3.DisplayMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.KGPT.HeadlineLarge" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.HeadlineMedium" parent="TextAppearance.Material3.HeadlineMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.HeadlineSmall" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.KGPT.TitleLarge" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.TitleMedium" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.TitleSmall" parent="TextAppearance.Material3.TitleSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="TextAppearance.KGPT.BodyLarge" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.BodyMedium" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.BodySmall" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.KGPT.LabelLarge" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="TextAppearance.KGPT.LabelMedium" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>
    <style name="TextAppearance.KGPT.LabelSmall" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Bottom Sheet Theme -->
    <style name="BottomSheetDialogTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">@null</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <!-- Web Search Bottom Sheet Theme -->
    <style name="WebSearchBottomSheetTheme" parent="Theme.Material3.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/WebSearchBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="WebSearchBottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="shapeAppearance">@style/ShapeAppearance.Material3.Corner.ExtraLarge</item>
        <item name="behavior_fitToContents">false</item>
        <item name="behavior_halfExpandedRatio">0.5</item>
    </style>

    <!-- Custom Dialog Theme -->
    <style name="CustomDialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">85%</item>
        <item name="android:windowMinWidthMinor">85%</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="Theme.Material3.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <!-- Floating Bottom Sheet Theme -->
    <style name="FloatingBottomSheetTheme" parent="Theme.KGPT">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Web Search Dialog Theme (Full Screen AlertDialog) -->
    <style name="WebSearchDialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!-- Web Search Activity Theme (Floating Bottom Sheet) -->
    <style name="Theme.KGPT.WebSearch" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="Theme.KGPT.Translucent" parent="Theme.KGPT">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>
    </style>

    <!-- Text Actions Menu Activity Theme (Floating Transparent) -->
    <style name="Theme.KGPT.TextActionsMenu" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
    </style>
    <style name="Animation.KGPT.DialogFade" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <!-- Rounded Text Input Layout -->
    <style name="Widget.KGPT.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>

    <style name="Widget.KGPT.TextInputLayout.ExposedDropdownMenu" parent="Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxCornerRadiusTopStart">24dp</item>
        <item name="boxCornerRadiusTopEnd">24dp</item>
        <item name="boxCornerRadiusBottomStart">24dp</item>
        <item name="boxCornerRadiusBottomEnd">24dp</item>
    </style>
</resources>
