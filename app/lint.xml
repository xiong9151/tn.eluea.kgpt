    <issue id="IconExpectedSize" severity="ignore" />
    <issue id="IconLocation" severity="ignore" />
    <issue id="IconMissingDensityFolder" severity="ignore" />
    
    <!-- Suppress InlinedApi warnings - we handle API compatibility -->
    <issue id="InlinedApi" severity="ignore" />
    
    <!-- Suppress hardcoded text warnings -->
    <issue id="HardcodedText" severity="ignore" />
    
    <!-- Suppress content description warnings -->
    <issue id="ContentDescription" severity="ignore" />
    
    <!-- Suppress RTL warnings -->
    <issue id="RtlHardcoded" severity="ignore" />
    <issue id="RtlSymmetry" severity="ignore" />
    <issue id="RtlEnabled" severity="ignore" />
    
    <!-- Suppress missing translation warnings -->
    <issue id="MissingTranslation" severity="ignore" />
    
    <!-- Suppress small sp text warnings -->
    <issue id="SmallSp" severity="ignore" />
    
    <!-- Suppress other common warnings -->
    <issue id="Autofill" severity="ignore" />
