<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer glow -->
    <item>
        <shape android:shape="oval">
            <solid android:color="#2000D26A" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
    <!-- Middle circle - bright green -->
    <item
        android:left="12dp"
        android:top="12dp"
        android:right="12dp"
        android:bottom="12dp">
        <shape android:shape="oval">
            <solid android:color="@color/terminal_green" />
        </shape>
    </item>
    <!-- Inner circle - dark green -->
    <item
        android:left="24dp"
        android:top="24dp"
        android:right="24dp"
        android:bottom="24dp">
        <shape android:shape="oval">
            <solid android:color="@color/terminal_green_dark" />
        </shape>
    </item>
</layer-list>
